<Window x:Class="HugeChart.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HugeChart.App"
        xmlns:hc="clr-namespace:HugeChart.Presentation;assembly=HugeChart.Presentation"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Background="Beige">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="50"/>
        </Grid.ColumnDefinitions>
        <hc:HorizontalScale Grid.Column="1" Grid.Row="0" 
                            Range="0,110" Step="10" Stroke="DarkBlue" StrokeLength="20" StrokeThickness="1"/>
        <hc:VerticalScale Grid.Column="0" Grid.Row="1" 
            Range="0,110" Step="10" Stroke="DarkBlue" StrokeLength="20" StrokeThickness="1"/>
    </Grid>
</Window>
